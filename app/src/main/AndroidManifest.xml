<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.futabooo.android.booklife">

  <uses-permission android:name="android.permission.INTERNET"/>

  <application
      android:name="com.futabooo.android.booklife.BookLife"
      android:allowBackup="true"
      android:icon="@mipmap/ic_launcher"
      android:label="@string/app_name"
      android:supportsRtl="true"
      android:theme="@style/AppTheme">
    <activity
        android:name="com.futabooo.android.booklife.screen.login.LoginActivity"
        android:theme="@style/NoActionBar">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>

        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>

    <activity android:name="com.futabooo.android.booklife.screen.home.HomeActivity">
    </activity>

    <activity android:name="com.futabooo.android.booklife.screen.booklist.BookListActivity">
    </activity>
  </application>

</manifest>