<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.futabooo.android.booklife">

  <uses-permission android:name="android.permission.INTERNET"/>

  <application
      android:name=".BookLife"
      android:allowBackup="true"
      android:icon="@mipmap/ic_launcher"
      android:label="@string/app_name"
      android:supportsRtl="true"
      android:theme="@style/AppThemeNoActionBar">

    <activity
        android:name=".screen.splash.SplashActivity"
        android:theme="@style/SplashTheme">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>
        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>

    <activity
        android:name=".screen.login.LoginActivity"
        android:theme="@style/AppThemeNoActionBar">
    </activity>

    <activity
        android:name=".screen.MainActivity">
    </activity>

    <activity
        android:name=".screen.search.SearchActivity">
    </activity>

    <activity
        android:name=".screen.bookdetail.BookDetailActivity">
    </activity>

    <activity
        android:name=".screen.bookedit.BookEditActivity">
    </activity>

    <meta-data
        android:name="io.fabric.ApiKey"
        android:value="f3b67672b3a5cea8877e1d74c3c8d016056f5b88"
        />

  </application>

</manifest>