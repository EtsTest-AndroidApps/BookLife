<resources>

  <style name="Widget.BookLife.Toolbar" parent="Widget.AppCompat.Toolbar">
    <item name="android:theme">@style/Theme.BookLife.Toolbar</item>
  </style>

  <style name="Widget.BookLife.ShadowedToolbar" parent="Widget.AppCompat.Toolbar">
    <item name="android:elevation">@dimen/elevation_small</item>
    <item name="android:theme">@style/Theme.BookLife.Toolbar</item>
  </style>

  <style name="Widget.BookLife.ArcItem" parent="">
    <item name="android:textColor">@android:color/white</item>
  </style>

  <style name="Widget.BookLife.ArcItem.Small">
    <item name="android:layout_width">@dimen/arc_item_small</item>
    <item name="android:layout_height">@dimen/arc_item_small</item>
    <item name="android:textSize">@dimen/app_text_size_small</item>
    <item name="android:background">@drawable/selector_arc_layout_menu</item>
  </style>

  <style name="Widget.BookLife.ArcItem.Medium">
    <item name="android:layout_width">@dimen/arc_item_medium</item>
    <item name="android:layout_height">@dimen/arc_item_medium</item>
    <item name="android:textSize">@dimen/app_text_size_medium</item>
    <item name="android:background">@drawable/selector_arc_layout_menu</item>
  </style>
</resources>
